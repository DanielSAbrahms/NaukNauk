<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="1"
    android:id="@+id/activityFavorites"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.irish.nauknaukfinalproject.FavoritesActivity">


    <TextView
        android:id="@+id/favoritesTextView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/favorites_text_view_string"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/favoritesColor"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:drawableEnd="@drawable/favorites_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/favoritesListView"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/search_text_view_string"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/searchByDepartmentListColor"
        android:layout_rowWeight="5"
        android:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</GridLayout>
