<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/professorLayout"
tools:context="com.example.irish.nauknaukfinalproject.MainActivity">

    <TextView
        android:id="@+id/ProfessorAvailableTextView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/available_false"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/available_false"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



<TextView
    android:id="@+id/ProfessorNameTextView"
    android:layout_row="1"
    android:layout_column="0"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:text="Professor Name"
    android:gravity="center"
    android:textSize="40sp"
    android:textColor="@color/textColorWhite"
    android:background="@color/professor1"
    android:layout_rowWeight="3"
    android:layout_columnSpan="2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DepartmentTextView"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Department"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/professor2"
        android:layout_rowWeight="3"
        android:layout_columnSpan="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/OfficeLocationTextView"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Office Location"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/professor3"
        android:layout_rowWeight="3"
        android:layout_columnSpan="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/PhoneNumberTextView"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Phone Number"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/professor4"
        android:layout_rowWeight="3"
        android:layout_columnWeight="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/PhoneNumberImageButton"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/professor4"
        android:src="@android:drawable/ic_menu_call"
        android:layout_rowWeight="3"
        android:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/EmailTextView"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Email"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/professor5"
        android:layout_rowWeight="3"
        android:layout_columnWeight="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/EmailImageButton"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/textColorWhite"
        android:background="@color/professor5"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_rowWeight="3"
        android:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</GridLayout>